<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Shared theme -->
    <style name="Theme" />

    <style name="Theme.TextViewStyle" />
    <style name="Theme.EditTextStyle" />
    <style name="Theme.ButtonStyle" />

    <style name="Theme.AlertDialog" />

    <style name="Theme.ActionBarBottom" />
    <style name="Theme.ActionBarBottomButton" />
    <style name="Theme.ActionBarTransparent" />
    <style name="Theme.ActionBarBottomTransparent" />
    <style name="Theme.Image" />
    <style name="Theme.Image.Date" />
    <style name="Theme.Image.Time" />
    <style name="Theme.Image.Tags" />
    <style name="Theme.Image.Notes" />
    <style name="Theme.Image.Link" />
    <style name="Theme.Image.Location" />
    <style name="Theme.MenuOverflowButton" parent="android:Widget.Holo.Button.Borderless" />
    <style name="Theme.EditButton" parent="android:Widget.Holo.Button.Borderless" />
    <style name="Theme.DeleteButton" parent="android:Widget.Holo.Button.Borderless" />

    <style name="Theme.GalleryImageText">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowRadius">1.5</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
    </style>

    <style name="Theme.HelpText">
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Theme.EmptyListText">
        <item name="android:layout_margin">25dp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="Theme.EmptyLocationsAddButton" parent="android:Widget.Holo.Button.Borderless" />
    <style name="Theme.EmptyTagsAddButton" parent="android:Widget.Holo.Button.Borderless" />
    <style name="Theme.EmptyPhotosAddFromCameraButton" parent="android:Widget.Holo.Button.Borderless" />
    <style name="Theme.EmptyPhotosAddFromGalleryButton" parent="android:Widget.Holo.Button.Borderless" />
    <style name="Theme.EmptyPhotosButtonSeparator" />

    <style name="Theme.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="contentPadding">8dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">2dp</item>
        <item name="cardBackgroundColor">?attr/cardBackgroundColor</item>
        <item name="cardUseCompatPadding">true</item>
    </style>
    <style name="Theme.CardDivider" />
    <style name="Theme.CardInlineAlertMessage" />

    <style name="Theme.NavDrawerBackground" />
    <style name="Theme.NavDrawerItem">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>



    <!-- Light theme -->

    <!--
    Unused for now, see themes.xml

    <style name="Theme.TextViewStyle.Light" parent="android:Widget.Holo.TextView" />
    <style name="Theme.EditTextStyle.Light" parent="android:Widget.Holo.Light.EditText" />
    <style name="Theme.ButtonStyle.Light" parent="android:Widget.Holo.Light.Button" />
    -->

    <style name="Theme.AlertDialog.Light" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/accent_color_light</item>
    </style>

    <style name="Theme.ActionBar.TabView.Light" parent="android:Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/action_bar_tab_indicator_light</item>
    </style>
    <style name="Theme.ActionBarBottom.Light">
        <item name="android:background">@drawable/ab_bottom_solid_light</item>
    </style>
    <style name="Theme.ActionBarBottomButton.Light">
        <item name="android:background">@drawable/ab_bottom_button_selector_light</item>
    </style>
    <style name="Theme.ActionBarTransparent.Light">
        <item name="android:background">@drawable/ab_transparent_light</item>
    </style>
    <style name="Theme.ActionBarBottomTransparent.Light">
        <item name="android:background">@drawable/ab_bottom_transparent_light</item>
    </style>

    <style name="Theme.Image.Date.Light">
        <item name="android:src">@drawable/date_light</item>
    </style>
    <style name="Theme.Image.Time.Light">
        <item name="android:src">@drawable/time_light</item>
    </style>
    <style name="Theme.Image.Tags.Light">
        <item name="android:src">@drawable/tags_light</item>
    </style>
    <style name="Theme.Image.Notes.Light">
        <item name="android:src">@drawable/notes_light</item>
    </style>
    <style name="Theme.Image.Link.Light">
        <item name="android:src">@drawable/link_light</item>
    </style>
    <style name="Theme.Image.Location.Light">
        <item name="android:src">@drawable/location_light</item>
    </style>
    <style name="Theme.MenuOverflowButton.Light">
        <item name="android:src">@drawable/menu_overflow_light</item>
    </style>
    <style name="Theme.EditButton.Light">
        <item name="android:src">@drawable/edit_light</item>
    </style>
    <style name="Theme.DeleteButton.Light">
        <item name="android:src">@drawable/delete_light</item>
    </style>

    <style name="Theme.DateSpinner.Light" parent="android:Widget.Holo.Light.Spinner">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>

    <style name="Theme.HelpText.Light">
        <item name="android:textColor">#777777</item>
    </style>

    <style name="Theme.EmptyListText.Light">
        <item name="android:textColor">#777777</item>
    </style>
    <style name="Theme.EmptyLocationsAddButton.Light">
        <item name="android:textColor">#0099CC</item>
        <item name="android:drawableLeft">@drawable/add_location_dark</item>
    </style>
    <style name="Theme.EmptyTagsAddButton.Light">
        <item name="android:textColor">#0099CC</item>
        <item name="android:drawableLeft">@drawable/add_tag_dark</item>
    </style>
    <style name="Theme.EmptyPhotosAddFromCameraButton.Light">
        <item name="android:textColor">#0099CC</item>
        <item name="android:drawableLeft">@drawable/add_photo_camera_dark</item>
    </style>
    <style name="Theme.EmptyPhotosAddFromGalleryButton.Light">
        <item name="android:textColor">#0099CC</item>
        <item name="android:drawableLeft">@drawable/add_photo_gallery_dark</item>
    </style>
    <style name="Theme.EmptyPhotosButtonSeparator.Light">
        <item name="android:background">#BBBBBB</item>
    </style>

    <style name="Theme.CardDivider.Light">
        <item name="android:background">#DDDDDD</item>
    </style>
    <style name="Theme.CardInlineAlertMessage.Light">
        <item name="android:background">#FFBD21</item>
    </style>

    <style name="Theme.NavDrawerBackground.Light">
        <item name="android:background">@color/nav_drawer_background_light</item>
    </style>
    <style name="Theme.NavDrawerItem.Light">
        <item name="android:background">@drawable/view_selector_light</item>
    </style>


