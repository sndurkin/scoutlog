<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detail_notes_card"
    style="?attr/cardView"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            style="?attr/imageNotes" />

        <TextView
            android:id="@+id/detail_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="48dp"
            android:minHeight="32dp"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:background="@android:color/transparent"
            android:hint="@string/notes"
            android:textIsSelectable="true"
            android:linksClickable="true"
            android:autoLink="all" />

        <LinearLayout
            android:id="@+id/detail_notes_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detail_notes"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="4dp"
            android:orientation="vertical"
            android:visibility="visible">

            <include layout="@layout/card_divider" />

            <include layout="@layout/card_edit_toolbar" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>